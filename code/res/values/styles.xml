<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="textShadowStyle">
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="TagShadowStyle">
        <item name="android:shadowColor">#737373</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="feedItemTextShadowStyle">
        <item name="android:shadowColor">#4c000000</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="ProfiletextShadowStyle">
        <item name="android:shadowColor">#4c000000</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="TagItemTextShadowStyle">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="popupMenuFadeAnim">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="popupMenuPullAnim">
        <item name="android:windowEnterAnimation">@anim/pull_in</item>
        <item name="android:windowExitAnimation">@anim/push_out</item>
    </style>

    <style name="tips_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <style name="LeftOutRightInActivityAnimationNoTitleTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/LeftOutRightInActivityAnimation</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="LeftOutRightInActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_slide_out_to_right</item>
    </style>

    <style name="WidgetDialogStyle" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <!-- parent="@android:style/Theme.Translucent.NoTitleBar" -->

    <style name="TryItLoginDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Style.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/android_db_actionbar_bg</item>
        <item name="android:background">@drawable/android_db_actionbar_bg</item>
        <item name="titleTextStyle">@style/Style.ActionBar.Title.Text</item>
        <item name="android:titleTextStyle">@style/Style.ActionBar.Title.Text</item>
        <item name="backgroundSplit">@null</item>
        <item name="android:backgroundSplit">@null</item>
    </style>

    <style name="Style.PopupMenu" parent="android:Widget.Holo.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_bg</item>
    </style>

    <style name="Style.ActionBar.Title.Text" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#cb553b</item>
    </style>

    <style name="Style.ActionBar.ActionButton" parent="Widget.Sherlock.ActionButton">
        <item name="android:minWidth">48dip</item>
    </style>

    <style name="Style.TextAppearance.PopupMenu.Large" parent="android:TextAppearance.Holo.Widget.PopupMenu.Large">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!-- style the items within the overflow menu -->
    <style name="Style.DropDownListView" parent="Widget.Sherlock.ListView.DropDown">
        <item name="android:background">@color/transparent</item>
        <item name="android:listSelector">@drawable/android_db_actionbar_selectable_bg</item>
        <item name="android:divider">@drawable/listview_splitor</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="Style.Search.TextView" parent="Widget.Sherlock.SearchAutoCompleteTextView">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="Style.Suggest.Button" parent="Widget.Sherlock.ActionButton">
        <item name="android:textSize">16.2sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme_ActionBar_Style" parent="Theme.Sherlock">
        <item name="actionBarStyle">@style/Style.ActionBar</item>
        <item name="actionBarSize">48dp</item>
        <item name="popupMenuStyle">@style/Style.PopupMenu</item>
        <item name="android:popupMenuStyle">@style/Style.PopupMenu</item>
        <item name="dropdownListPreferredItemHeight">55dip</item>
        <item name="android:dropDownListViewStyle">@style/Style.DropDownListView</item>
        <item name="dropDownListViewStyle">@style/Style.DropDownListView</item>
        <item name="homeAsUpIndicator">@drawable/topbar_btn_back</item>
        <item name="android:homeAsUpIndicator">@drawable/topbar_btn_back</item>
        <item name="android:selectableItemBackground">@drawable/android_db_actionbar_selectable_bg</item>
        <item name="selectableItemBackground">@drawable/android_db_actionbar_selectable_bg</item>
        <item name="textAppearanceLargePopupMenu">@style/Style.TextAppearance.PopupMenu.Large</item>
        <item name="android:textAppearanceLargePopupMenu">@style/Style.TextAppearance.PopupMenu.Large</item>
        <item name="searchViewTextField">@drawable/actionbar_friend_page_search_box_underline</item>
        <item name="searchViewCloseIcon">@drawable/android_db_actionbar_searchview_close</item>
        <item name="searchViewSearchIcon">@drawable/android_db_actionbar_searchview_search</item>
        <item name="searchAutoCompleteTextView">@style/Style.Search.TextView</item>
        <item name="actionButtonStyle">@style/Style.ActionBar.ActionButton</item>
        <item name="android:textCursorDrawable">@null</item>

        <!-- 页面跳转动画 -->
        <item name="android:windowAnimationStyle">@style/LeftOutRightInActivityAnimation</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <declare-styleable name="ArrowView">
        <attr name="loading_src" format="reference" />
    </declare-styleable>

    <style name="PhotoGridLayout">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:listSelector">@drawable/photogrid_list_selector</item>
    </style>

</resources>